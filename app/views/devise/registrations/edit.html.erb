<% content_for(:html_title) {  "ユーザの設定変更" } %>
<h2>ユーザの設定変更</h2>

<%= form_for(resource, as: resource_name, url: update_user_registration_path, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :name %>*<br />
    <%= f.text_field :username %>
  </div>
  
<div class="field">
    <%= f.label :id %>*<br />
    <%= f.text_field :userid %>
  </div>
  
  <div class="field">
    <%=f.label :profileimage,"ユーザー画像" %>
      <%= f.file_field :profileimage %>
  </div>
  

  <div class="field">
    <%= f.label :Mail %>*<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <em>(<%= @minimum_password_length %> characters minimum</em>)<br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>

     
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :current_password %>*<br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
  <br />  <br />
